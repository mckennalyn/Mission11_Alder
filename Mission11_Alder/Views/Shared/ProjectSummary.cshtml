@{
}

@model Book

<div class="card m-1 p-1">
    <h3>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>Book Title: @Model.Title</small></span>
    </h3>

    <ul>
        <li>Book Author: @Model.Author</li>
        <li>Book Publisher: @Model.Publisher</li>
        <li>Book ISBN: @Model.Isbn</li>
        <li>Book Classification / Category: @Model.Classification / @Model.Category</li>
        <li>Book Page Count: @Model.PageCount</li>
        <li>Book Price: @Model.Price</li>
    </ul>
</div>